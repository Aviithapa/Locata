<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8f8f8"
    tools:context=".ui.main.ui.home.HomeFragment"
    android:focusableInTouchMode="true">

        <androidx.cardview.widget.CardView
            android:id="@+id/namedetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f8f8f8"
            android:layout_margin="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Abhishek Thapa"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:padding="5dp"
                android:text="Where are you going today "/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/search_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            app:cardBackgroundColor="@color/whiteTextColor"
            app:cardCornerRadius="20dp"
            android:layout_below="@+id/namedetails">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/editTextName"
                    style="@style/modifiedEditText"
                    android:layout_marginTop="@dimen/loginViewsMargin"
                    android:hint="Name"
                    android:inputType="textPersonName"
                    android:maxLines="1" />

                <EditText
                    android:id="@+id/editName"
                    style="@style/modifiedEditText"
                    android:layout_marginTop="@dimen/loginViewsMargin"
                    android:hint="Name"
                    android:inputType="textPersonName"
                    android:maxLines="1" />

                <br.com.simplepass.loading_button_lib.customViews.CircularProgressButton
                    android:id="@+id/cirRegisterButton"
                    style="@style/loginButton"
                    android:layout_width="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/loginViewsMargin"
                    android:text="Get the Bus"
                    app:initialCornerAngle="27dp"
                    app:spinning_bar_color="#FFF"
                    app:spinning_bar_padding="6dp"
                    app:spinning_bar_width="4dp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:padding="5dp"
        android:textSize="18dp"
        android:layout_below="@+id/search_details"
        android:text="Place Near You "/>

    <com.google.android.gms.maps.MapView
        android:id="@+id/mapView2"
        android:layout_below="@+id/place"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</RelativeLayout>